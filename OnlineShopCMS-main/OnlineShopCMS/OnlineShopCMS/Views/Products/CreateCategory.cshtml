@model OnlineShopCMS.Models.Category

@{
    ViewData["Title"] = "Create Category";
    Layout = "~/Views/Shared/_ProductManagLayout.cshtml";

}

<!-- Main page content-->
<div class="container-xl px-4 mt-n10">
    <div class="row col-12">
        <div class="col-3">
        </div>
        <div class="col-6">
            <br />
            <div class="card" style="border-radius:30px">
                <div class="card-header">

                    <div class="text-center">
                        
                        <h2 class="display-6" style="border-radius:15px; color:white;background-color:darkblue;padding:10px"><i class="fas fa-shopping-bag"></i> 新增商品類別</h2><br /><h4>Create Category</h4>

                        <div>
                            <a asp-action="ListCategories">返回選單</a>
                        </div>
                    </div>
                    <div class="card-body">

                        <hr />
                        <div class="row col-12">
                            <div class="col-3">
                            </div>
                            <div class="col-6">
                                <form asp-action="CreateCategory">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label">品類名稱</label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Description" class="control-label">類別描述</label>
                                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                    <br />

                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                            <div class="col-3">
                            </div>



                        </div>




                    </div>




                </div>
            </div>

        </div>

        <div class="col-3">
        </div>
    </div>





</div>
    


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
