@model IEnumerable<OnlineShopCMS.Models.Category>

@{
    ViewData["Title"] = "Category List";
    Layout = "~/Views/Shared/_ProductManagLayout.cshtml";

}



</p>
<div class="container-xl px-4 mt-n10">
  <div class="row centered">
    <div class="col-12">
            <div class="col-1"></div>
            <div class="col-10">
                <div class="card" style="border-radius: 20px">
                    <div class="card-header">
                        <div class="row col-12">


                            <div class="col-10">
                                <br />
                                <div class="text-center">
                                    <h1 class="display-6 font-weight-bolder fw-bolder" style="color:darkgoldenrod">
                                        <i class="fas fa-shopping-bag"></i> 品類列表檢索
                                    </h1>
                                </div>

                            </div>
                            <div class="col-2">
                                <br />
                                <div class="text-center">
                                    <a asp-action="CreateCategory" class="btn btn-success">新增品類</a>
                                </div>
                            </div>




                            <p>
                        </div>

                    </div>
                    <div class="card-body" style="border-radius:20px">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>類別代號</th>
                                        <th>類別名稱</th>
                                        <th>項目描述</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>
                                                @if (item.Name.Contains("餐飲廚具"))
                                                {
                                                    <span class="badge bg-green-soft text-green">@item.Name</span>
                                                }
                                                else if (item.Name.Contains("戶外休閒"))
                                                {
                                                    <span class="badge bg-blue-soft text-blue">@item.Name</span>
                                                }
                                                else if (item.Name.Contains("液化石油氣"))
                                                {
                                                    <span class="badge bg-red-soft text-red">@item.Name</span>
                                                }
                                                else if (item.Name.Contains("風味美食"))
                                                {
                                                    <span class="badge bg-purple-soft text-purple">@item.Name</span>
                                                }
                                                else if (item.Name.Contains("生活日用"))
                                                {
                                                    <span class="badge bg-yellow-soft text-yellow">@item.Name</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-gray-soft text-gray">@item.Name</span>
                                                }
                                            </td>
                                            <td>@item.Description</td>
                                            <td>
                                                <style>


                                                    th:first-child,
                                                    td:first-child {
                                                        width: 10%;
                                                    }

                                                    td:nth-child(4),
                                                    td:nth-child(4) {
                                                        width: 20%; /* 調整為你想要的寬度 */
                                                    }

                                                    tr:nth-child(2) td:nth-child(2) {
                                                        width: 20%;
                                                    }

                                                    td:nth-child(3),
                                                    td:nth-child(3) {
                                                        width: 20%; /* 調整為你想要的寬度 */
                                                    }



                                                    .d-flex align-items-center {
                                                        display: flex;
                                                        align-items: center; /* This ensures vertical centering */
                                                    }

                                                    .btn-group .form-inline {
                                                        display: inline-flex;
                                                        vertical-align: middle;
                                                    }

                                                    .btn-group button, .btn-group a.btn {
                                                        border-radius: 10px;
                                                        font-size: 16px;
                                                        padding: 6px 12px;
                                                        line-height: 1.5;
                                                    }

                                                    .badge {
                                                        font-size: 16px;
                                                    }

                                                </style>

                                                <div class="d-flex" style="margin:10px">
                                                    <!-- Edit form -->
                                                    <form asp-controller="Products" asp-action="EditCategory" method="get" class="mr-2 " style="margin:10px">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <button type="submit" class="btn btn-primary">Edit</button>
                                                    </form>


                                                    <!-- Delete form -->
                                                    <form asp-controller="Products" asp-action="DeleteCategory" style="margin:10px" method="post" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                    </form>
                                                </div>

                                                <!-- 根據類別名稱設置標籤樣式 -->

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <h1>品類列表檢索</h1>
                        <p>
                    </div>
                </div>
            </div>

            <div class="col-1"></div>
    </div>
  </div>
  
</div>

