@model List<Order>
@{
    ViewData["Title"] = "未完成的訂單";
    Layout = "~/Views/Shared/_OrderManagLayout.cshtml";
}
<div class="container-xl px-4 mt-n10" style="position:relative">



    <div class="" style="min-height:45vh" style="padding:20px;">
        <div class="card" style="border-radius:20px">
            <div class="card-header card-subtitle" style="padding:20px;style=" min-height:45vh">
                <div class="row">



                    <div class="card" style="border-radius:20px;padding:30px;">
                        <div class="row">

                            <div class="card" style="border-radius:20px;padding:30px">





                                <div class="row" style="border-radius: 30px;">
                                    <div class="row col-10 justify-content-end">
                                        <div class="col-12">
                                            <div class="display-7" style="border-radius:10px; background-color:darkblue;">
                                                <h1 style="color:white;padding:10px">未完成訂單</h1>
                                            </div>
                                            <div> <h3>| Fail-Order List</h3></div>



                                            <div class="col-8">
                                                <form asp-action="Index" class="col-12">
                                                    <div class="input-group input-group-sm">
                                                        <input class="form-control" type="text" placeholder="Name" name="searchString" />
                                                        <div class="input-group-append">
                                                            <input class="btn btn-primary" type="submit" value="Search" />
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-1"></div>
                                    <div class="col-1 justify-content-end">
                                        <div class="row justify-content-end">
                                            <a class="btn btn-primary btn-sm" style="padding-left: 20px; padding-right:20px;margin-top:20px;" asp-controller="Product" asp-action="Error">待施工</a>
                                        </div>
                                        <div class="row justify-content-end mt-2">
                                            <a class="btn btn-primary btn-sm" style="padding-left: 20px; padding-right: 20px;" asp-controller="Product" asp-action="Error">待施工</a>
                                        </div>
                                    </div>
                                </div>

                                <div class="card-footer">
                                </div>





                            </div>


                        

                            <table class="table table-striped">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>訂單編號</th>
                                        <th>訂單日期</th>
                                        <th>訂單金額</th>
                                        <th>收件人姓名</th>
                                        <th>收件人地址</th>
                                        <th>收件人電話</th>
                                        <th>是否已付款</th>
                                        <th>訂單明細</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td>@order.Id</td>
                                            <td>@order.OrderDate</td>
                                            <td>@order.Total</td>
                                            <td>@order.ReceiverName</td>
                                            <td>@order.ReceiverAddress</td>
                                            <td>@order.ReceiverPhone</td>
                                            <td>@(order.IsPaid ? "是" : "否")</td>
                                            <td>
                                                <a href="@Url.Action("Details", "Order", new { id = order.Id })" class="btn btn-primary">查看明細</a>
                                            </td>
                                            <td>
                                                <!-- Add action buttons here -->
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                     

                    </div>

                </div>
            </div>
        </div>
    </div>

</div>