@model List<OnlineShopCMS.Models.OrderViewModel>

<h1>未成立的訂單</h1>

@if (Model.Count == 0)
{
    <p>目前沒有未成立的訂單。</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>訂單編號</th>
                <th>用戶ID</th>
                <th>訂單日期</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Order.Id</td>
                    <td>@order.Order.UserId</td>
                    <td>@order.Order.OrderDate</td>
                    <td>
                        <a asp-action="Details" asp-route-Id="@order.Order.Id" class="btn btn-primary">查看詳情</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
