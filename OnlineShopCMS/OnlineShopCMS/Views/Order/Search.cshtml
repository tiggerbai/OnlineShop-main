@model OnlineShopCMS.Models.SearchViewModel

@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_OrderManagLayout.cshtml";
}

<!-- Main page content-->
<div class="container-xl px-4 mt-n10" style="position:relative">



    <div class="" style="min-height:45vh" style="padding:20px;">
        <div class="card" style="border-radius:20px">
            <div class="card-header card-subtitle" style="padding:20px;style=" min-height:45vh">
                <div class="row">
                    <div class="card" style="border-radius:20px;padding:30px;">


                        <div class="row">


                            <div class="card" style="border-radius:20px;padding:30px">
                                <div class="row" style="border-radius: 30px;">
                                    <div class="row col-10 justify-content-end">
                                        <div class="col-12">
                                            <div class="display-7" style="border-radius:10px; background-color:darkblue;">
                                                <h1 style="color:white;padding:10px">訂單搜索列表</h1>
                                            </div>
                                            <div>
                                                <h3 style="color:darkblue;">
                                                    <i class="fas fa-shopping-cart" style="color:darkblue;"></i> Search Orders
                                                </h3>
                                            </div>



                                            <div class="col-8">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-1"></div>
                                    <div class="col-1 justify-content-end">
                                    </div>
                                </div>





                                <form id="searchForm">
                                    <div class="form-group">
                                        <label asp-for="Criteria.OrderId">Order ID:</label>
                                        <input asp-for="Criteria.OrderId" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Criteria.UserId">Customer ID:</label>
                                        <input asp-for="Criteria.UserId" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Criteria.StartDate">Start Date:</label>
                                        <input asp-for="Criteria.StartDate" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Criteria.EndDate">End Date:</label>
                                        <input asp-for="Criteria.EndDate" class="form-control" />
                                    </div>

                                    <button type="submit" class="btn btn-primary">Search</button>
                                </form>
                                <div class="card-footer">
                                </div>

                            </div>

                            <div id="searchResult">
                                <!-- 顯示搜尋結果 -->


                            </div>



                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
   
    <script>
        $(document).ready(function () {
            $('#searchForm').on('submit', function (e) {
                e.preventDefault();

                $.ajax({
                    url: '@Url.Action("Search", "Order")',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (data) {
                        // 更新視圖
                        $('#searchResult').html(data);
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        // 處理錯誤
                        console.error(textStatus, errorThrown);
                    }
                });
            });
        });
    </script>
}


